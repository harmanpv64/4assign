#Q1
class Circle():
    def __init__(self, radius):
        self.radius = radius
    def getArea(self):
        print("Area of circle:")
        a= 3.14 * self.radius * self.radius
        print(a)
    def getCircumference(self):
        print("Circumference of circle")
        b = self.radius * 2 * 3.14
        print(b)
b=Circle(6)
b.getArea()
b.getCircumference()
print('\n')
#Q2
class Student():
    def __init__(self, name, roll):
        self.n = name
        self.rn = roll
    def display(self):
         self.n
         self.rn
x=Student('Harman preet',65)
print("Name of student is:",x.n)
print("Roll number of student is:",x.rn)
print('\n')
#Q3
class Temprature():
    def __init__(self, celsius):
        self.temp=celsius
    def fahrenhiet(self):
        return 9/5*self.temp+32
    def celsius(self):
        return self.temp
z=Temprature(40.5)
print("fahrenhiet to celsius is:",z.fahrenhiet())
print("celsius to fahrenhiet is:",z.celsius())
print('\n')
