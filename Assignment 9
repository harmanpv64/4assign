#Q5
class Expenditure():
    def __init__(self,expenditure,saving):
        self.ex=expenditure
        self.s=saving
    def total_salary(self):
        return self.ex+self.s
i=Expenditure(35000,25000)
print("Expenditure is:",i.ex)
print("saving is:",i.s)
